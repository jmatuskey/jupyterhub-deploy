#! /bin/bash

set -e

# When buildkit caching or development mode are enabled, don't clear the cache
if [[ "${CLEAR_PKG_CACHES}" == "1" ]]; then
    echo "-------------------------------------------------------------------------------"
    echo "===== Cleaning up conda env..."
    . /etc/profile.d/conda.sh
    ${CONDA_VER} clean -fya
    ${CONDA_VER} build purge-all
    rm -rf $HOME/.cache/pip
fi
